<header class="header">公司动态信息编辑平台</header>
<section class="section common-form">
	<form class="form-horizontal js-put-form">
		<input type="hidden" name="id" value="{{#with (parse new)}}{{id}}{{/with}}">
		<div class="hide js-form-type" data-type="1"></div>
		<div class="form-group">
			<label for="title" class="col-sm-2 control-label">标题</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="title" placeholder="请输入标题" name="title" {{#with (parse new)}}value="{{title}}"{{/with}}>
			</div>
		</div>
		<div class="form-group">
			<label for="time" class="col-sm-2 control-label">创建时间</label>
			<div class="col-sm-10">
				<input type="date" class="form-control" id="time" name="createdAt" {{#with (parse new)}}value="{{formatDate createdAt "YYYY-MM-DD"}}"{{/with}}>
			</div>
		</div>
		<div class="form-group">
			<label for="creator" class="col-sm-2 control-label">创建人</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="creator" name="creator" {{#with (parse new)}}value="{{creator}}"{{/with}}>
			</div>
		</div>
		<div id="toolbar" class="toolbar"></div>
		<div class="gap"></div>
		<div id="editor" class="editor">{{#with (parse new)}}{{{content}}}{{/with}}</div>
		<div class="form-group form-btn">
			<div class="col-sm-10">
				<button type="submit" class="btn btn-primary">保存</button>
				<a href="/input" class="btn btn-default">取消</a>
			</div>
		</div>
	</form>
</section>
