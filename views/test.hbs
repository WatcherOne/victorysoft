			<a href="javascript:;">
				<header>
					<div class="time">{{formatDate createdAt 'day'}}</div>
					<i class="iconfont icon-tubiao_Axinwengonggao"></i>
					<span class="title">{{title}}</span>
				</header>
				<div class="new-img">
					<img src="/images/product5.jpg" alt="" style="width: 255px; height: 255px">
				</div>
			</a>
		</section>
	{{/each}}
