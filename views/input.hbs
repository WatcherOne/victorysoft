<header class="header">后台编辑信息平台</header>
<section class="section">
	<header class="sec-header">
		<div class="title inline">增加新闻</div>
		<div class="right">
			<i class="iconfont icon-jiahao2 js-show-tag hide"></i>
			<i class="iconfont icon-jianhao js-hide-tag"></i>
		</div>
	</header>
    <div class="sec-content">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th width="20%">序号</th>
                    <th width="30%">新闻标题</th>
                    <th width="20%">创建时间</th>
                    <th width="30%" class="td-operate">操作</th>
                </tr>
            </thead>
            <tbody>
                {{#each news}}
                    <tr>
                        <td>{{add @index}}</td>
                        <td>{{title}}</td>
                        <td>{{formatDate createdAt "YYYY-MM-DD"}}</td>
                        <td class="td-operate">
                            <a class="btn btn-default" href="/admin/news?id={{id}}" role="button">编辑</a>
                            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal" data-id="{{id}}" data-type="1">删除</button>                  
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <a class="btn btn-primary" href="/admin/news">新建公司动态</a>
    </div>
</section>
<section class="section">
	<header class="sec-header">
		<div class="title inline">产品信息</div>
		<div class="right">
			<i class="iconfont icon-jiahao2 js-show-tag hide"></i>
			<i class="iconfont icon-jianhao js-hide-tag"></i>
		</div>
	</header>
    <div class="sec-content">
        {{#each type}}
            <a class="btn btn-medium btn-info" href="/admin/type?id={{id}}&typeName={{typeName}}" role="button">{{typeName}}</a>
        {{/each}}
        <a class="btn btn-primary right" href="/admin/type">新建产品分类</a>
        <table class="table table-bordered table-hover products-table">
            <thead>
                <tr>
                    <th width="20%">序号</th>
                    <th width="20%">产品名称</th>
                    <th width="20%">产品类别</th>
                    <th width="20%">创建时间</th>
                    <th width="20%" class="td-operate">操作</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <td>{{add @index}}</td>
                        <td>{{name}}</td>
                        <td>
                            {{#each ../type}}
                                {{#equals ../type id}}
                                    {{typeName}}
                                {{/equals}}
                            {{/each}}
                        </td>
                        <td>{{formatDate createdAt "YYYY-MM-DD"}}</td>
                        <td class="td-operate">
                            <a class="btn btn-default" href="/admin/products?id={{id}}" role="button">编辑</a>
                            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal" data-id="{{id}}" data-type="4">删除</button>                  
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <a class="btn btn-primary" href="/admin/products">新建产品</a>
    </div>
</section>
<section class="section">
	<header class="sec-header">
		<div class="title inline">招聘信息</div>
		<div class="right">
			<i class="iconfont icon-jiahao2 js-show-tag hide"></i>
			<i class="iconfont icon-jianhao js-hide-tag"></i>
		</div>
	</header>
    <div class="sec-content">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th width="20%">序号</th>
                    <th width="30%">招聘岗位</th>
                    <th width="20%">招聘地点</th>
                    <th width="30%" class="td-operate">操作</th>
                </tr>
            </thead>
            <tbody>
                {{#each offers}}
                    <tr>
                        <td>{{add @index}}</td>
                        <td>{{position}}</td>
                        <td>{{local}}</td>
                        <td class="td-operate">
                            <a class="btn btn-default" href="/admin/join?id={{id}}" role="button">编辑</a>
                            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal" data-id="{{id}}" data-type="2">删除</button>                  
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <a class="btn btn-primary" href="/admin/join">新建公司招聘</a>
    </div>
</section>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">温馨提示！！！</h4>
      </div>
      <div class="modal-body">
          <div>您确定要删除这条数据吗？</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <input type="hidden" value="" class="js-delete-type">
        <input type="hidden" value="" class="js-delete-id">
        <button type="button" class="btn btn-primary js-delete-data">确定</button>
      </div>
    </div>
  </div>
</div>
