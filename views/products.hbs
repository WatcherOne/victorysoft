<div class="products">
  <div class="container" id="myTabs" role="navigation">
    <div class="col-md-3">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs nav-pills nav-stacked" role="tablist">
        {{#each type}}
          <li role="presentation" {{#equals @index 0}}class="active"{{/equals}}><a href="#{{id}}" aria-controls="{{id}}" role="tab" data-toggle="tab">{{typeName}}</a></li>
        {{/each}}
      </ul>
    </div>

    <div class="col-md-9">
      <!-- Tab panes -->
      <div class="tab-content">
        {{#each type}}
          <div role="tabpanel" class="tab-pane {{#equals @index 0}}active{{/equals}}" id="{{id}}">
            {{#each ../products}}
              {{#equals type ../id}}
                <a href="/products/{{id}}" class="product-detail">
                  <img src="{{themeImg}}" alt="产品主题图">
                  <div class="product-content">
                    <div class="product-name">{{name}}</div>
                    <div class="product-desc">{{function}}</div>
                    <div class="product-time">{{formatDate createdAt "YYYY-MM-DD"}}</div>
                  </div>
                </a>
              {{/equals}}
            {{/each}}
            {{#findFull ../products id}}
                <a href="javascript:;" class="no-product product-detail">
                  <div>该分类下暂无产品！</div>
                </a>
            {{/findFull}}
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
