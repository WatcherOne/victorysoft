<header class="header">公司产品信息维护</header>
<section class="section common-form">
	<form class="form-horizontal js-put-form">
		<input type="hidden" name="id" value="{{#with products}}{{id}}{{/with}}">
		<div class="hide js-form-type" data-type="4"></div>
		<div class="form-group">
			<label for="name" class="col-sm-2 control-label">产品名称</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="name" placeholder="请输入产品名称" name="name" value="{{#with products}}{{name}}{{/with}}">
			</div>
		</div>
		<div class="form-group">
			<label for="time" class="col-sm-2 control-label">创建时间</label>
			<div class="col-sm-10">
				<input type="date" class="form-control" id="time" name="createdAt" value="{{#with products}}{{formatDate createdAt "YYYY-MM-DD"}}{{/with}}">
			</div>
		</div>
        <div class="form-group">
			<label class="col-sm-2 control-label">产品分类</label>
			<div class="col-sm-10">
				<select class="form-control" id="typeId" name="typeId">
                    {{#each type}}
                        <option value="{{id}}" {{#if ../products}}{{#equals ../products.type id}}selected{{/equals}}{{/if}}>{{typeName}}</option>
                    {{/each}}
                </select>
			</div>
		</div>
		
        <div class="form-group">
			<label for="img" class="col-sm-2 control-label">产品主图</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="img" name="themeImg" placeholder="如：http://images/..." value="{{#with products}}{{themeImg}}{{/with}}">
			</div>
		</div>
        <div class="form-group">
			<label for="desc" class="col-sm-2 control-label">产品主要描述</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" id="desc" name="function" value="{{#with products}}{{function}}{{/with}}">
			</div>
		</div>
		<div id="toolbar" class="toolbar"></div>
		<div class="gap"></div>
		<div id="editor" class="editor">{{#with products}}{{{decode content}}}{{/with}}</div>
		<div class="form-group form-btn">
			<div class="col-sm-10">
				<button type="submit" class="btn btn-primary">保存</button>
				<a href="/admin" class="btn btn-default">取消</a>
			</div>
		</div>
	</form>
</section>
